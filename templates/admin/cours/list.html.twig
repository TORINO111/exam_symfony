{% extends 'base.html.twig' %}

{% block title %}Liste des Cours{% endblock %}

{% block body %}
    <h1>Liste des Cours</h1>
    <table>
        <thead>
            <tr>
                <th>Nom du Cours</th>
                <th>Professeur</th>
                <th>Module</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for cours in cours %}
                <tr>
                    <td>{{ cours.nom }}</td>
                    <td>{{ cours.professeur.nom }} {{ cours.professeur.prenom }}</td>
                    <td>{{ cours.module }}</td>
                    <td>
                        <a href="{{ path('admin_cours_edit', {'id': cours.id}) }}">Modifier</a> |
                        <a href="{{ path('admin_cours_delete', {'id': cours.id}) }}">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <br>
    <a href="{{ path('admin_cours_create') }}">Cr√©er un nouveau Cours</a>
{% endblock %}
